
{
  // =========================
  // Editor Appearance
  // =========================
  "inlay_hints": {
    "show_other_hints": false,
    "show_parameter_hints": false,
    "show_type_hints": false,
    "show_value_hints": true
  },
  "ui_font_size": 16,
  "buffer_font_size": null,
  "buffer_font_features": {
    "calt": false // ligatures
  },
  "lsp_document_colors": "border",
  "show_edit_predictions": false,
  "terminal": {
    "font_family": "Agave Nerd Font Mono"
  },

  // Theme & Colors
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte - No Italics",
    "dark": "Catppuccin Mocha - No Italics"
  },

  // =========================
  // Editor Behavior
  // =========================
  "autosave": {
    "after_delay": { "milliseconds": 500 }
  },
  "format_on_save": "on",
  "restore_on_startup": "last_session",
  "show_completions_on_input": true,

  // =========================
  // Privacy & Telemetry
  // =========================
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
